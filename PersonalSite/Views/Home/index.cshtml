@model PersonalSite.ViewModels.AllInformationViewModel

@{
	ViewBag.Title = "Resume";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/homecss")


<div class="jumbotron text-center">
	<div class="row">
		<div class="col-md-4">
			<img class="logo" src="@Model.Person.AvatarLink" alt="عکس بارگزاری نشد">
		</div>
		<div class="col-md-8">
			<hgroup>
				<h1>@Model.Person.Name</h1>
				<h3>@Model.Person.Profession</h3>
			</hgroup>
			<hr>

			@Html.Partial("_ContactUs")
		</div>
	</div>
</div>

<div class="container other-profile-info">
	<h2>درباره من</h2>
	<div class="row">
		<div class="col-md-12">
			<p>
				@Model.Person.AboutUs
			</p>
		</div>
	</div>

	@Html.Partial("_Skills")

	@Html.Partial("_Educations")

	@Html.Partial("_Expriences")



</div>

<h2 class="text-center">موقعیت من در نقشه</h2>
