
@if (Model.Skills.Count > 0)
{
	<h2>مهارت ها</h2>

	<div class="row">
		@foreach (var skill in Model.Skills)
		{
			<div class="col-lg-3 col-md-3 col-sm-3 ltr">
				<label>@skill.Name</label>
			</div>
			<div class="col-lg-3 col-md-3 col-sm-9">
				<div class="progress">
					<div class="progress-bar
					@if (@skill.Amount >= 70)
					{
						<text>progress-bar-success</text>
					}
					else if (@skill.Amount < 45 && @skill.Amount >= 25)
					{
						<text>progress-bar-warning</text>
					}
					else if (@skill.Amount < 25)
					{
						<text>progress-bar-danger</text>
					}
					 " role="progressbar" aria-valuenow="@skill.Amount" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: @skill.Amount%;">
						@skill.Amount%
					</div>
				</div>
			</div>
		}
	</div>
}
