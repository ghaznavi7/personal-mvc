@model IEnumerable<PersonalSite.Models.Skill>

@{
    ViewBag.Title = "مهارت ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>مهارت ها</h2>

<p>
    @Html.ActionLink("افزودن", "Create")
</p>
<table class="table">
